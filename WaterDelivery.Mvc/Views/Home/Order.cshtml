@model OrderDto
@{
    ViewData["Title"] = "Заказать";
}


<form asp-action="Order" asp-controller="Home" asp-anti-forgery="true">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="FullName">Введите Ф.И.О:</label>
                    <input type="text" class="form-control" asp-for="FullName" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adress">Введите адрес (улица, дом, подъезд, квартира):</label>
                    <input type="text" class="form-control" asp-for="Adress" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Введите номер телефона:</label>
                    <input type="tel" class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity">Количество:</label>
                    <input type="number" value="1" class="form-control" asp-for="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Заказать" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

